terraform {
  required_providers {
    grafana = {
      source  = "grafana/grafana"
      version = "~> 1.36.0"
    }
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.20.0"
    }
  }
}

provider "kubernetes" {
  config_path = "~/.kube/config"
}

variable "grafana_url" {
  description = "URL for Grafana"
  type        = string
  default     = "http://localhost:3000"
}

provider "grafana" {
  url                  = var.grafana_url
  auth                 = "admin:admin"
  insecure_skip_verify = true
}

# Create Grafana datasource for PostgreSQL metrics
resource "grafana_data_source" "prometheus" {
  type          = "prometheus"
  name          = "Prometheus"
  url           = "http://prometheus-server.default.svc.cluster.local"
  is_default    = true
  access_mode   = "proxy"
  
  # Add this to handle the case when the data source already exists
  lifecycle {
    ignore_changes = [
      name,
      uid
    ]
  }
}

